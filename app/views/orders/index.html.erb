<h1>注文履歴</h1>

<table>
  <thead>
    <tr>
      <th>注文番号</th>
      <th>日付</th>
      <th>ステータス</th>
      <th>合計金額</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
        <td><%= order.status %></td>
        <td><%= number_to_currency(order.order_items.sum { |item| item.unit_price * item.quantity }) %></td>
        <td><%= link_to '詳細', order_path(order), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'カートに戻る', cart_path, class: 'btn btn-secondary' %>
