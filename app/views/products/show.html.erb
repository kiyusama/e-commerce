<h1><%= @product.name %></h1>
<p><%= @product.description %></p>
<p>Price: <%= number_to_currency(@product.price) %></p>

<%= form_with model: CartItem.new, url: cart_items_path, method: :post, local: true do |form| %>
  <%= form.hidden_field :product_id, value: @product.id %>
  <div class="form-group">
    <%= form.label :quantity, '数量', class: 'control-label' %>
    <%= form.number_field :quantity, value: 1, min: 1, class: 'form-control' %>
  </div>
  <%= form.submit 'カートに追加', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'カートの中を見る', cart_path, class: 'btn btn-info' %>
<%= link_to 'Back', products_path, class: 'btn btn-secondary' %>
